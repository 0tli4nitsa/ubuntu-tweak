import os

from gi.repository import Gtk, Unique

from ubuntutweak.app import UbuntuTweakApp
from ubuntutweak.common.consts import DATA_DIR

def show_splash():
    win = Gtk.Window(type=Gtk.WindowType.POPUP)
    win.set_position(Gtk.WindowPosition.CENTER)

    vbox = Gtk.VBox()
    image = Gtk.Image()
    image.set_from_file(os.path.join(DATA_DIR, 'pixmaps/splash.png'))

    vbox.pack_start(image, True, True, 0)
    win.add(vbox)

    win.show_all()

    while Gtk.events_pending():
        Gtk.main_iteration()

    win.destroy()


if __name__ == "__main__":
    show_splash()

    app = UbuntuTweakApp()

    if app.is_running():
        app.send_message(Unique.Command.ACTIVATE, Unique.MessageData())
    else:
        app.run()
